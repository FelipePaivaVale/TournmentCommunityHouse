<div class="profile-result-container">
  <div class="container">
    <div class="row justify-content-center mt-4">
      <div class="col-lg-10 col-md-12">
        
        <!-- Botão Voltar -->
        <div class="mb-4">
          <%= link_to "← Voltar para busca", root_path, class: "btn btn-outline-light btn-sm" %>
        </div>

        <!-- Card Principal -->
        <div class="profile-card-main">
          <!-- Header do Perfil -->
          <div class="profile-header-main">
            <div class="profile-avatar-section">
              <div class="profile-icon-wrapper">
                <% if @player_info[:profile_icon_id] %>
                  <%= image_tag RiotApi::SummonerService.get_profile_icon_url(@player_info[:profile_icon_id]),
                      class: "profile-icon",
                      alt: "Ícone do Invocador" %>
                  <div class="level-badge">
                    <span class="level-text"><%= @player_info[:summoner_level] %></span>
                  </div>
                <% else %>
                  <div class="avatar-placeholder">
                    <%= @player_info[:game_name][0].upcase %>
                  </div>
                <% end %>
              </div>
            </div>
            
            <div class="profile-info-section">
              <h1 class="profile-name-main">
                <%= @player_info[:game_name] %>
                <span class="profile-tag-main">#<%= @player_info[:tag_line] %></span>
              </h1>
              <div class="profile-level">
                <i class="fas fa-level-up-alt me-2"></i>
                <span>Nível <%= @player_info[:summoner_level] %></span>
              </div>
              <div class="profile-server">
                <i class="fas fa-server me-2"></i>
                <span>BR - América Latina</span>
              </div>
            </div>
          </div>

          <!-- Seção de Estatísticas Ranked -->
          <div class="ranked-section-wrapper">
            <div class="section-header">
              <h3 class="section-title-purple">
                <i class="fas fa-trophy me-2"></i>
                Estatísticas Ranked
              </h3>
              <div class="section-subtitle">Temporada Atual</div>
            </div>
            
            <div class="ranked-cards-grid">
              <!-- Solo/Duo Queue -->
              <% if @ranked_data[:solo] %>
                <div class="ranked-card ranked-card-solo">
                  <div class="ranked-card-header">
                    <div class="queue-info">
                      <i class="fas fa-crown queue-icon"></i>
                      <div>
                        <h4 class="queue-title">Solo/Duo</h4>
                        <div class="queue-subtitle">Ranked 5v5</div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="ranked-card-content">
                    <div class="rank-display">
                      <div class="rank-icon-wrapper">
                        <div class="rank-icon-large">
                          <% tier_image = @ranked_data[:solo][:tier].downcase == 'iron' ? 'Rank=Iron.png' : "#{@ranked_data[:solo][:tier].downcase}.png" %>
                          <%= image_tag tier_image, alt: @ranked_data[:solo][:tier], class: "rank-tier-image" %>
                        </div>
                      </div>
                      <div class="rank-details-large">
                        <div class="rank-tier-large">
                          <span class="tier-name"><%= @ranked_data[:solo][:tier] %></span>
                          <span class="division"><%= @ranked_data[:solo][:rank] %></span>
                        </div>
                        <div class="rank-lp-large">
                          <span class="lp-value"><%= @ranked_data[:solo][:league_points] %></span>
                          <span class="lp-label">LP</span>
                        </div>
                      </div>
                    </div>
                    
                    <div class="stats-container">
                      <div class="win-loss-stats">
                        <div class="win-loss-item">
                          <div class="win-loss-label">Vitórias</div>
                          <div class="win-loss-value win"><%= @ranked_data[:solo][:wins] %></div>
                        </div>
                        <div class="win-loss-item">
                          <div class="win-loss-label">Derrotas</div>
                          <div class="win-loss-value loss"><%= @ranked_data[:solo][:losses] %></div>
                        </div>
                        <div class="win-loss-item">
                          <div class="win-loss-label">Winrate</div>
                          <div class="win-loss-value winrate"><%= @ranked_data[:solo][:winrate] %>%</div>
                        </div>
                      </div>
                      
                      <div class="progress-container">
                        <div class="progress-bar-bg">
                          <div class="progress-bar-fill" style="width: <%= @ranked_data[:solo][:winrate] %>%"></div>
                        </div>
                        <div class="progress-label">
                          <span>Winrate: <%= @ranked_data[:solo][:winrate] %>%</span>
                        </div>
                      </div>
                      
                      <% if @ranked_data[:solo][:hot_streak] %>
                        <div class="special-badges">
                          <span class="badge-hot-streak">
                            <i class="fas fa-fire"></i>
                            Hot Streak
                          </span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% else %>
                <div class="ranked-card ranked-card-empty">
                  <div class="ranked-card-header">
                    <div class="queue-info">
                      <i class="fas fa-user queue-icon"></i>
                      <div>
                        <h4 class="queue-title">Solo/Duo</h4>
                        <div class="queue-subtitle">Ranked 5v5</div>
                      </div>
                    </div>
                  </div>
                  <div class="no-rank-content">
                    <i class="fas fa-chart-line no-rank-icon"></i>
                    <p class="no-rank-text">Sem rank nesta fila</p>
                    <small class="no-rank-subtext">Complete 5 partidas ranqueadas</small>
                  </div>
                </div>
              <% end %>

              <!-- Flex Queue -->
              <% if @ranked_data[:flex] %>
                <div class="ranked-card ranked-card-flex">
                  <div class="ranked-card-header">
                    <div class="queue-info">
                      <i class="fas fa-users queue-icon"></i>
                      <div>
                        <h4 class="queue-title">Flex</h4>
                        <div class="queue-subtitle">Ranked 5v5 Flex</div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="ranked-card-content">
                    <div class="rank-display">
                      <div class="rank-icon-wrapper">
                        <div class="rank-icon-large">
                          <% tier_image = @ranked_data[:flex][:tier].downcase == 'iron' ? 'Rank=Iron.png' : "#{@ranked_data[:flex][:tier].downcase}.png" %>
                          <%= image_tag tier_image, alt: @ranked_data[:flex][:tier], class: "rank-tier-image" %>
                        </div>
                      </div>
                      <div class="rank-details-large">
                        <div class="rank-tier-large">
                          <span class="tier-name"><%= @ranked_data[:flex][:tier] %></span>
                          <span class="division"><%= @ranked_data[:flex][:rank] %></span>
                        </div>
                        <div class="rank-lp-large">
                          <span class="lp-value"><%= @ranked_data[:flex][:league_points] %></span>
                          <span class="lp-label">LP</span>
                        </div>
                      </div>
                    </div>
                    
                    <div class="stats-container">
                      <div class="win-loss-stats">
                        <div class="win-loss-item">
                          <div class="win-loss-label">Vitórias</div>
                          <div class="win-loss-value win"><%= @ranked_data[:flex][:wins] %></div>
                        </div>
                        <div class="win-loss-item">
                          <div class="win-loss-label">Derrotas</div>
                          <div class="win-loss-value loss"><%= @ranked_data[:flex][:losses] %></div>
                        </div>
                        <div class="win-loss-item">
                          <div class="win-loss-label">Winrate</div>
                          <div class="win-loss-value winrate"><%= @ranked_data[:flex][:winrate] %>%</div>
                        </div>
                      </div>
                      
                      <div class="progress-container">
                        <div class="progress-bar-bg">
                          <div class="progress-bar-fill" style="width: <%= @ranked_data[:flex][:winrate] %>%"></div>
                        </div>
                        <div class="progress-label">
                          <span>Winrate: <%= @ranked_data[:flex][:winrate] %>%</span>
                        </div>
                      </div>
                      
                      <% if @ranked_data[:flex][:hot_streak] %>
                        <div class="special-badges">
                          <span class="badge-hot-streak">
                            <i class="fas fa-fire"></i>
                            Hot Streak
                          </span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% else %>
                <div class="ranked-card ranked-card-empty">
                  <div class="ranked-card-header">
                    <div class="queue-info">
                      <i class="fas fa-users queue-icon"></i>
                      <div>
                        <h4 class="queue-title">Flex</h4>
                        <div class="queue-subtitle">Ranked 5v5 Flex</div>
                      </div>
                    </div>
                  </div>
                  <div class="no-rank-content">
                    <i class="fas fa-chart-line no-rank-icon"></i>
                    <p class="no-rank-text">Sem rank nesta fila</p>
                    <small class="no-rank-subtext">Complete 5 partidas ranqueadas</small>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="match-history-section mt-5">
            <div class="section-header">
                <h3 class="section-title-purple">
                <i class="fas fa-history me-2"></i>
                Histórico de Partidas
                </h3>
                <div class="section-subtitle">Últimas partidas ranqueadas</div>
            </div>

            <% if @matches.present? %>
                <div id="matches-container">
                <%= render partial: 'match_item', collection: @matches, as: :match %>
                </div>

                <!-- Botão Carregar Mais -->
                <div id="load-more-container" class="text-center mt-4">
                <button id="load-more-btn" 
                        class="btn btn-load-more"
                        data-puuid="<%= @player_info[:puuid] %>"
                        data-offset="10">
                    <i class="fas fa-plus-circle me-2"></i>
                    Carregar Mais Partidas
                </button>
                <div id="loading-spinner" class="mt-3" style="display: none;">
                    <div class="spinner-border text-light" role="status">
                    <span class="visually-hidden">Carregando...</span>
                    </div>
                </div>
                </div>
            <% else %>
                <div class="no-matches-message">
                <i class="fas fa-gamepad fa-3x"></i>
                <p class="mt-3">Nenhuma partida recente encontrada</p>
                <small class="text-muted">O histórico pode não estar disponível para todas as filas</small>
                </div>
            <% end %>
            </div>
        </div>
        
      </div>
    </div>
  </div>
</div>